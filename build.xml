<project name="ADMNetworks" default="runAll" basedir=".">  

<!-- ========== Initialize Properties =================================== -->
    <property environment="env"/>
        
    <!--<property name="webSite" value="http://www.manta.com" />-->
    <property name="test-results.dir" value="test-output" />
   
    <target name="setClassPath" unless="test.classpath">
        <path id="classpath_jars">
            <fileset dir="lib" includes="*.jar"/>
        </path>
        <pathconvert pathsep=":" 
            property="test.classpath" 
            refid="classpath_jars"/>
    </target>

    <target name="init" depends="setClassPath">
        <tstamp>
            <format property="start.time" pattern="MM/dd/yyyy hh:mm aa" />
        </tstamp>
        <condition property="ANT" 
            value="${env.ANT_HOME}/bin/ant.bat" 
            else="${env.ANT_HOME}/bin/ant">
                    <os family="windows" />
        </condition>
        <taskdef name="testng" classpath="${test.classpath}"
             classname="org.testng.TestNGAntTask" /> 
    </target>
  
    <!-- all -->
  

    <!-- clean -->
    <target name="clean">
        <delete dir="build"/>
		<delete dir="${test-results.dir}" />
    </target>

    <!-- compile -->
    <target name="compile" depends="init, clean" > 
		<delete includeemptydirs="true" quiet="true">
            <fileset dir="build" includes="**/*"/>			
		</delete>
        <echo message="making directory..."/>
		<mkdir dir="build"/>
		<mkdir dir="${test-results.dir}"/>
        <!-- <echo message="classpath: ${test.classpath}"/> -->
        <echo message="compiling..."/>
        <javac
            debug="true" 
            destdir="build" 
            includes="*/*.java" 
            srcdir="src/com/ADMNetworks" 
            target="1.7" 
            classpath="${test.classpath}"          
  
        ></javac>
      </target>

    <!-- bin -->
    <target name="build" depends="CasesTab,login">
    </target>

    <!-- run -->
    
	<target name="runAll" depends="compile,init">
         <testng classpath="${test.classpath}:build" 
				outputdir="${test-results.dir}"
				suitename="singletest"
				haltonfailure="true"
				useDefaultListeners="false"
				listeners="org.uncommons.reportng.HTMLReporter,org.uncommons.reportng.JUnitXMLReporter">
            <xmlfileset dir="config" includes="All.xml"/>	
			<sysproperty key="org.uncommons.reportng.title" value="My Test Report"/>				
        </testng>        
    </target>
	
